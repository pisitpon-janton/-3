import math
print("---------------------------------------------------------------")
print("ตัวอย่างการทำงาน")
print("---------------------------------------------------------------")
print("เช่น")
print("*ป้อนตัวหารคือป้อนตัวที่จะหารแบบเศษเหลือ*")
print("x³-3x²-6x+8=0")
print("กรอก 1 ,-3 ,-6 ,8 ตามลำดับ")
print("---------------------------------------------------------------")
print("---------------------------------------------------------------")
number0 = int(input("ป้อนตัวเลขตัวหาร = "))
number1 = int(input("ป้อนตัวเลขสัมประสิทธ์ x กำลัง 3 = "))
number2 = int(input("ป้อนตัวเลขสัมประสิทธ์ x กำลัง 2 = "))
number3 = int(input("ป้อนตัวเลขสัมประสิทธ์ x กำลัง 1 = "))
number4 = int(input("ป้อนตัวเลขสัมประสิทธ์ x กำลัง 0 = "))
print("---------------------------------------------------------------")
number1a = number0 * number1
number2a = number1a + number2
number3a = number2a * number0
number4a = number3a + number3
number5a = number4a * number0
number6a = number5a + number4
if number6a == 0 :
  print("---------------------------------------------------------------")
  print("คุณต้องหารด้วย",number0,("จึงจะเหลือเศษ 0"))
  print("---------------------------------------------------------------")
  x0 = number2a**2-4*number1*number4a
  if x0 >= 0 :
    x1 = math.sqrt(x0)
    x2 = -number2a+x1
    x3 = -number2a-x1
    x = x2/2*number1
    y = x3/2*number1
    print("---------------------------------------------------------------")
    print("คำตอบที่1 = ",x)
    print("คำตอบที่2 = ",y)
    print("คำตอบที่3 = ",number0)

    print("---------------------------------------------------------------")
    print("---------------------------------------------------------------")
    print("เมื่อแยกตัวประกอบจะเขียนในรูป ( x+",-x,")","( x+",-y,")","( X+",-number0,")")
    print("---------------------------------------------------------------")
  else :
    print("---------------------------------------------------------------")
    print("สมการนี้ไม่มีคำตอบ")
    print("---------------------------------------------------------------")
else :
  print("---------------------------------------------------------------")
  print("คุณต้องหารด้วยด้วยตัวอื่น")
  print("---------------------------------------------------------------")
